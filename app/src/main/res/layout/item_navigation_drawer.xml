<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivDrawableLeft"
        android:layout_width="@dimen/margin_18dp"
        android:layout_height="@dimen/margin_18dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/notification"/>

    <TextView
        android:id="@+id/tvDrawerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/margin_10dp"
        android:fontFamily="@font/gotham_book"
        android:layout_toEndOf="@id/ivDrawableLeft"
        android:paddingBottom="@dimen/margin_8dp"
        android:paddingLeft="@dimen/margin_8dp"
        android:textColor="@color/black"
        android:paddingTop="@dimen/margin_16dp"
        android:text="ABCfj"
        android:textSize="@dimen/textSizeMedium" />

    <TextView
        android:id="@+id/action_badge"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        android:layout_alignEnd="@id/action_notification"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_18dp"
        android:layout_toEndOf="@id/tvDrawerName"
        android:background="@drawable/notification_badge_bg"
        android:fontFamily="@font/gotham_book"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:text="1"
        android:textColor="@color/white"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvDrawerName"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:background="@color/halfTrans" />

</RelativeLayout>